@import url(loader.css);

body {
    background-color: #F1F1F2;
    font-family: 'Open Sans', Arial, sans-serif;
}

th {
    text-align: center;
}
.question-box {
    padding: 20px 0;
    border-top: 1px solid #ccc;
}

.question-box > div:first-child {
    padding-bottom: 10px;
}

.question-box:first-child {
    border-top: 0;
}

.pi-grade:required:invalid {
    color: #999;
}

.pi-grade > option[value=''] {
    display: none;
}

.pi-grade:required:invalid > option {
    color: #555;
}
.common-errors {
    color: red;
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    padding: 20px 0;
}

.sheet-title {
    text-align: center;
}

.planning-column {
    padding: 0 !important;
}

.planning-checkbox {
    display: none;
}

.planning-label {
    width: 100%;
    height: 50px;
    margin-bottom: 0;
    cursor: pointer;
}

.planning-label:hover {
    background-color: #ddd;
}

.planning-label > .planning-line {
    display: block;
    width: 100%;
    height: 10px;
    position: relative;
    top: calc(50% - 5px);
}

.planning-checkbox:checked ~ .planning-label > .planning-line {
    background-color: red;
}

.planning-label.planning-start {
    padding-left: 5px !important;
}

.planning-label.planning-start > .planning-line {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
}

.planning-label.planning-end {
    padding-right: 5px !important;
}

.planning-label.planning-end > .planning-line {
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

textarea {
    resize: none;
    overflow: hidden;
}

th.rotate {
    /* Something you can count on */
    height: 140px;
    white-space: nowrap;
}

th.rotate > div {
    transform:
        /* Magic Numbers translate(25px, 51px);*/

        /* 45 is really 360 - 45 */
            rotate(315deg);

    -webkit-transform: rotate(315deg);
    width: 30px;
}
th.rotate > div > span {
    border-bottom: 1px solid #ccc;
    padding: 5px 10px;
}

#loadingAlert > .modal-dialog {
    width: 266px;
    margin: 25% auto;

.navbar {
    z-index: 50 !important;
}

.toggle-menu {
    z-index: 100;
    position: fixed;
    top: 5px;
    left: 5px;
}


.nav-side-menu {
    overflow: auto;
    font-family: verdana;
    font-size: 12px;
    font-weight: 200;
    background-color: #2e353d;
    position: fixed;
    top: 50px;
    left: 0px;
    z-index: 10;
    width: 300px;
    height: 100%;
    color: #e1ffff;
}

.nav-side-menu {
    display: none;
}
.nav-side-menu ul,
.nav-side-menu li {
    list-style: none;
    padding: 0px;
    margin: 0px;
    line-height: 35px;
    cursor: pointer;
}
.nav-side-menu ul :not(collapsed) .arrow:before,
.nav-side-menu li :not(collapsed) .arrow:before {
    font-family: FontAwesome;
    content: "\f078";
    display: inline-block;
    padding-left: 10px;
    padding-right: 10px;
    vertical-align: middle;
    float: right;
}
.nav-side-menu ul .active,
.nav-side-menu li .active {
    border-left: 3px solid #d19b3d;
    background-color: #4f5b69;
}
.nav-side-menu ul .sub-menu li.active,
.nav-side-menu li .sub-menu li.active {
    color: #d19b3d;
}
.nav-side-menu ul .sub-menu li.active a,
.nav-side-menu li .sub-menu li.active a {
    color: #d19b3d;
}
.nav-side-menu ul .sub-menu li,
.nav-side-menu li .sub-menu li {
    background-color: #181c20;
    border: none;
    line-height: 28px;
    border-bottom: 1px solid #23282e;
    margin-left: 0px;
}
.nav-side-menu ul .sub-menu li:hover,
.nav-side-menu li .sub-menu li:hover {
    background-color: #020203;
}
.nav-side-menu ul .sub-menu li:before,
.nav-side-menu li .sub-menu li:before {
    font-family: FontAwesome;
    content: "\f105";
    display: inline-block;
    padding-left: 10px;
    padding-right: 10px;
    vertical-align: middle;
}
.nav-side-menu li {
    padding-left: 0px;
    border-left: 3px solid #2e353d;
    border-bottom: 1px solid #23282e;
}
.nav-side-menu li a {
    text-decoration: none;
    color: #e1ffff;
}
.nav-side-menu li a i {
    padding-left: 10px;
    width: 20px;
    padding-right: 20px;
}
.nav-side-menu li:hover {
    border-left: 3px solid #d19b3d;
    background-color: #4f5b69;
    -webkit-transition: all 1s ease;
    -moz-transition: all 1s ease;
    -o-transition: all 1s ease;
    -ms-transition: all 1s ease;
    transition: all 1s ease;
}

